{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist-functions",
    "rootDir": "."
  },
  "include": [
    "netlify/functions/**/*.ts",
    "entities/**/*.ts",
    "src/interfaces/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "frontend",
    "backend"
  ]
}

